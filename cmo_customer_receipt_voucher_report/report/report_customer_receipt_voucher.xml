<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="customer_receipt_voucher_layout_header">
            <div class="header crv_header">
                <t t-set="wizard" t-value="docs.get_value_wizard()"/>
                <div class="row">
                    <div class="col-xs-4">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"/>
                    </div>
                    <div class="col-xs-4 text-center title">
                        <b>ใบสำคัญรับเงิน</b><br/>
                        <b>RECEIPT VOUCHER</b>
                    </div>
                    <div class="col-xs-4 text-right number"></div>
                </div>
                <div class="row payment_type">
                    <div class="col-xs-12 text-right">
                        <b class="text">เงินสด / เช็ค</b><br/>
                        <span class="input">
                            <t t-if="not wizard.is_cheque">
                                <b class="cash"><input type="checkbox" name="cash" checked="checked"/> Cash</b>
                                <b class="cheque"><input type="checkbox" name="cheque"/> Cheque</b>
                            </t>
                            <t t-if="wizard.is_cheque">
                                <b class="cash"><input type="checkbox" name="cash"/> Cash</b>
                                <b class="cheque"><input type="checkbox" name="cheque" checked="checked"/> Cheque</b>
                            </t>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        <div><b>เลขที่</b></div>
                        <div><b>No</b></div>
                    </div>
                    <div class="col-xs-10">
                        <span t-esc="', '.join(list(set([doc.voucher_id.number for doc in docs.sorted(lambda l: l.voucher_id.number)])))"/>
                    </div>
                </div>
                <t t-set="amount_wht" t-value="abs(sum(docs.mapped('voucher_id').mapped('line_cr_ids').mapped('amount_wht'))) - abs(sum(docs.mapped('voucher_id').mapped('line_dr_ids').mapped('amount_wht')))"/>
                <t t-set="total_taxed" t-value="0"/>
                <t t-set="total_amount_untaxed" t-value="0"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-set="amount_total_all" t-value="doc._get_amount_all(doc.amount_taxed, total_wht, total_vat)"/>
                    <t t-set="total_taxed" t-value="total_taxed + amount_total_all[1]"/>
                    <t t-set="total_amount_untaxed" t-value="total_amount_untaxed + amount_total_all[0]"/>
                </t>
                <div class="row margin-top">
                    <div class="col-xs-2">
                        <div><b>รับเงิน</b></div>
                        <div><b>Receive Baht</b></div>
                    </div>
                    <div class="col-xs-3">
                        <span t-esc="'{0:,.2f}'.format(total_amount_untaxed + total_taxed - amount_wht)"/>
                    </div>
                    <div class="col-xs-1">
                        <div><b>บาท</b></div>
                        <div><b>Baht</b></div>
                    </div>
                    <div class="col-xs-6">
                        (<span t-esc="docs.get_text_total_amount(total_amount_untaxed + total_taxed - total_wht)"/>)
                    </div>
                </div>
                <div class="row margin-top">
                    <div class="col-xs-2">
                        <div><b>จาก</b></div>
                        <div><b>From</b></div>
                    </div>
                    <div class="col-xs-10">
                        <span t-esc="wizard.partner_id.name"/>
                    </div>
                </div>
                <div class="row margin-top">
                    <div class="col-xs-2">
                        <div><b>เพื่อชำระค่า</b></div>
                        <div><b>For</b></div>
                    </div>
                    <div class="col-xs-10"></div>
                </div>
                <div class="row margin-top">
                    <div class="col-xs-2">
                        <div><b>เช็คเลขที่</b></div>
                        <div><b>No Cheque</b></div>
                    </div>
                    <div class="col-xs-2">
                        <span t-esc="docs and docs[0].voucher_id.number_cheque"/>
                    </div>
                    <div class="col-xs-2">
                        <div><b>ธนาคาร</b></div>
                        <div><b>Bank</b></div>
                    </div>
                    <div class="col-xs-2">
                        <span t-esc="docs and docs[0].voucher_id.bank_cheque"/>
                    </div>
                    <div class="col-xs-2">
                        <div><b>ลงวันที่</b></div>
                        <div><b>Due Date</b></div>
                    </div>
                    <div class="col-xs-2">
                        <span t-esc="', '.join(list(set([datetime.datetime.strptime(doc.voucher_id.date, '%Y-%m-%d').strftime('%d/%m/%Y') for doc in docs.sorted(lambda l: l.voucher_id.date)])))"/>
                    </div>
                </div>
                <!-- <div class="row margin-top">
                    <div class="col-xs-2">
                        <div><b>ลงวันที่</b></div>
                        <div><b>Due Date</b></div>
                    </div>
                    <div class="col-xs-10">
                        <span t-esc="', '.join(list(set([datetime.datetime.strptime(doc.voucher_id.date, '%Y-%m-%d').strftime('%d/%m/%Y') for doc in docs.sorted(lambda l: l.voucher_id.date)])))"/>
                    </div>
                </div> -->
            </div>
        </template>
        <template id="customer_receipt_voucher_layout_footer">
            <div class="footer crv_footer">
                <div class="row">
                    <div class="col-xs-5">
                        <div class="margin-top">
                            <div style="display: inline-block;">
                                <b>ผู้จัดทำ</b><br/>
                                <b>Prepared By</b>
                            </div>
                            <div style="display: inline-block;width: 220px; border-bottom: 1px solid;"></div>
                        </div>
                        <div class="margin-top">
                            <div style="display: inline-block;">
                                <b>วันที่</b><br/>
                                <b>Date</b>
                            </div>
                            <div style="display: inline-block;width: 270px; border-bottom: 1px solid;"></div>
                        </div>
                    </div>
                    <div class="col-xs-7">
                        <div class="col-xs-6" style="border-left: 1px solid; border-top: 1px solid; border-bottom: 1px solid; padding: 4px;margin-top: 40px;">
                            <b>ผู้รักษาเงิน</b><br/>
                            <b>Cashier</b>
                        </div>
                        <div class="col-xs-6" style="border: 1px solid; padding: 4px;margin-top: 40px;">
                            <b>ผู้ตรวจบิล</b><br/>
                            <b>Bills Checked</b>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-9"></div>
                    <div class="col-xs-3">
                        <div style="border-bottom: 1px solid;margin-top: 60px;"></div>
                        <div class="text-center"><b>ผู้รับเงิน<br/>Received By</b></div>
                    </div>
                </div>
            </div>
        </template>
        <template id="customer_receipt_voucher_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-call="cmo_customer_receipt_voucher_report.customer_receipt_voucher_layout_header"/>
            <t t-raw="0"/>
            <t t-call="cmo_customer_receipt_voucher_report.customer_receipt_voucher_layout_footer"/>
        </template>
        <template id="customer_receipt_voucher_pdf">
            <t t-call="report.html_container">
                <t t-call="cmo_customer_receipt_voucher_report.customer_receipt_voucher_layout">
                    <div class="page crv_detail">
                        <table>
                            <thead>
                                <tr>
                                    <th colspan="3" style="border-right: 1px solid;">
                                        <div style="display: inline-block;width: 100px;">
                                            <div>นำเงินเข้า</div>
                                            <div>Pay in at</div>
                                        </div>
                                        <div style="display: inline-block;width: 100px;">
                                            <div>ธนาคาร</div>
                                            <div>Bank</div>
                                        </div>
                                        <div style="display: inline-block; width: 400px;">
                                            <t t-set="partner_banks" t-value="docs.mapped('bank_receipt_id.partner_bank_id')"/>
                                            <t t-foreach="partner_banks" t-as="partner_bank">
                                                <div t-esc="partner_bank.display_name"/>
                                            </t>
                                        </div>
                                        <div style="display: inline-block;">
                                            <div>วันที่</div>
                                        </div>
                                    </th>
                                </tr>
                                <tr>
                                    <th class="text-center" style="border-bottom: 1px solid;">
                                        บ/ช เลขที่<br/>
                                        Acc. No.
                                    </th>
                                    <th class="text-center" style="border-bottom: 1px solid;">
                                        รายการ<br/>
                                        Transaction
                                    </th>
                                    <th class="text-center" style="border-bottom: 1px solid;border-right: 1px solid;">
                                        จำนวนเงิน<br/>
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_amount_untaxed" t-value="0"/>
                                <t t-set="total_taxed" t-value="0"/>
                                <t t-set="total_diff" t-value="0"/>
                                <t t-set="total_vat" t-value="docs.get_vat()"/>
                                <t t-set="total_wht" t-value="abs(sum(docs.mapped('voucher_id').mapped('line_cr_ids').mapped('amount_wht'))) - abs(sum(docs.mapped('voucher_id').mapped('line_dr_ids').mapped('amount_wht')))"/>
                                <t t-set="wht" t-value="docs._get_wht_all()"/>
                                <t t-set="writeoff" t-value="''"/>
                                <tr t-foreach="docs" t-as="doc">
                                    <t t-set="total_diff" t-value="total_diff + doc.voucher_id.writeoff_amount"/>
                                    <t t-if="doc.voucher_id.writeoff_amount">
                                        <t t-set="writeoff" t-value="' '.join([str(doc.voucher_id.comment_text or ''), writeoff])"/>
                                    </t>
                                    <t t-set="amount_total_all" t-value="doc._get_amount_all(doc.amount_taxed, total_wht, total_vat, doc.voucher_id.writeoff_amount)"/>
                                    <t t-set="total_taxed" t-value="total_taxed + amount_total_all[1]"/>
                                    <t t-set="total_amount_untaxed" t-value="total_amount_untaxed + amount_total_all[0]"/>
                                    <td/>
                                    <td>
                                        <t t-set="transaction" t-value="' / '.join(filter(lambda l: l != False and l != '', [doc.move_line_id.name, doc.analytic_account_id.name]))"/>
                                        <span t-esc="transaction"/>
                                    </td>
                                    <td class="text-right" style="border-right: 1px solid;"><span t-esc="'{0:,.2f}'.format(amount_total_all[0])"/></td>
                                </tr>
                                <t t-if="total_diff">
                                    <tr>
                                        <td/>
                                        <td t-esc="writeoff"/>
                                        <td class="text-right" style="border-right: 1px solid;"><b>(<span t-esc="'{0:,.2f}'.format(abs(total_diff))"/>)</b></td>
                                    </tr>
                                </t>
                                <t t-if="total_vat">
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td class="text-right" style="border-top: 3px solid;border-right: 1px solid;"><b t-esc="'{0:,.2f}'.format(total_amount_untaxed)"/></td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td class="text-right"><b>Vat 7%</b></td>
                                        <td class="text-right" style="border-right: 1px solid;"><b t-esc="'{0:,.2f}'.format(total_taxed)"/></td>
                                    </tr>
                                </t>
                                <t t-if="total_wht">
                                    <tr>
                                        <td/>
                                        <td/>
                                        <td class="text-right" style="border-right: 1px solid; border-top: 3px solid;"><b t-esc="'{0:,.2f}'.format(total_amount_untaxed + total_taxed)"/></td>
                                    </tr>
                                    <tr t-foreach="wht" t-as="wht_type">
                                        <t t-set="total_with_wht" t-value="docs._filter_wht_line(wht_type)"/>
                                        <td/>
                                        <td class="text-right"><b>WHT <t t-esc="int(wht_type.amount * 100)"/>%</b></td>
                                        <td class="text-right" style="border-right: 1px solid;"><b t-esc="'{0:,.2f}'.format(abs(total_with_wht))"/></td>
                                    </tr>
                                </t>
                                <tr>
                                    <td></td>
                                    <td class="text-right"><b>Total</b></td>
                                    <td class="text-right" style="border-right: 1px solid;border-top: 3px solid;border-bottom: 3px solid;"><b t-esc="'{0:,.2f}'.format(total_amount_untaxed + total_taxed - total_wht + total_diff)"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
